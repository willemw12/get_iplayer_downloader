# Maintainer: willemw12 <willemw12@gmail.com>

_name=get_iplayer_downloader
pkgname=$_name-git
pkgver=20120519
pkgrel=1
pkgdesc="A GUI download utility for BBC get_iplayer"
arch=('any')
url="https://github.com/willemw12/get_iplayer_downloader"
license=('GPL3')
depends=('get_iplayer' 'gtk3' 'python-gobject' 'python>=3.2')
makedepends=('git')
provides=("$_name")
conflicts=("$_name")
options=(!emptydirs)
#install="$pkgname.install"
#source=(https://github.com/willemw12/get_iplayer_downloader/tarball/master)
#md5sums=()

_gitroot=git://github.com/willemw12/get_iplayer_downloader.git
_gitname=$pkgname

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"

  #sed -i 's|#![ ]*/usr/bin/env python[ ]*$|#!/usr/bin/env python2|' extra/get_iplayer_post_subdir.py

  python setup.py install --root="$pkgdir/" --optimize=1
  python setup.py clean
  rm -rf build

  # Python setup.py already does the following
  #install -m644 res/get_iplayer_downloader.desktop -t ${pkgdir}/usr/share/applications/
  #install -m644 res/get_iplayer_downloader.svg -t ${pkgdir}/usr/share/pixmaps/
  #install -m755 extra/get_iplayer_post_subdir.py -t ${pkgdir}/usr/share/get_iplayer_downloader/scripts/

  #xdg-desktop-menu install --novendor res/get_iplayer_downloader.desktop
  #xdg-desktop-icon install --novendor res/get_iplayer_downloader.desktop
  #xdg-icon-resource install --novendor --size 96 res/get_iplayer_downloader.png
}

