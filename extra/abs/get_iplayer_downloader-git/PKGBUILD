# Maintainer: willemw12 <willemw12@gmail.com>

_name=get_iplayer_downloader
pkgname=$_name-git
pkgver=20120326
pkgrel=1
pkgdesc="A GUI download utility for BBC get_iplayer"
arch=('any')
url="https://github.com/willemw12/get_iplayer_downloader"
license=('GPL3')
depends=('gtk3' 'python2-gobject' 'python2>=2.7')
makedepends=('git')
optdepends=('get_iplayer' 'get_iplayer-git')
provides=("$_name")
conflicts=("$_name")
options=(!emptydirs)
#install="$pkgname.install"
#source=(https://github.com/willemw12/get_iplayer_downloader/tarball/master)
#md5sums=()

_gitroot=git://github.com/willemw12/get_iplayer_downloader.git
_gitname=$pkgname

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [[ -d "$_gitname" ]] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" --depth=1
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --root="$pkgdir/" --optimize=1
  python2 setup.py clean
  rm -rf build
}

